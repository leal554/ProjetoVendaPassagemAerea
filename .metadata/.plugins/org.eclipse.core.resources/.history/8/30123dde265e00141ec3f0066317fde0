	public void actionPerformed(ActionEvent e)
	{
		String pesoBagagem = texto1.getText();
		String numeroBagagem = texto2.getText();
		String necessidadeEspecial = null; // refazer
		String criança = null; //refazer
		String idaEvolta = null; // refazer
		String formaPagamento = null; // refazer
		String numeroCartao = texto3.getText();
		String codSeguranca = texto4.getText();
		String dataIda = null; //refazer
		String dataVolta = null; // refazer
		
		if(e.getSource() == escolherAcento)
		{
			Passagem p = new Passagem(pesoBagagem, numeroBagagem, necessidadeEspecial, criança, idaEvolta, formaPagamento, numeroCartao, codSeguranca, dataIda, dataVolta);
			Pagamento pa = new Pagamento();
			Acentos a = new Acentos();
			dispose();
		}
		
		if(e.getSource() == voltar)
		{
			MenuPassagem mp = new MenuPassagem();
			dispose();
		}
	}
