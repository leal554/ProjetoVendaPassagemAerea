import java.awt.*;
import java.awt.event.*;

import javax.swing.*;

public class Poltronas extends JFrame implements ActionListener
{
	private JButton voltar, comprar;
	
	public Poltronas()
	{

		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setVisible(true);
		
		JPanel tela = new JPanel();
		tela.setLayout(new BorderLayout());
		
		//setContentPane(new Fundo()); //imagem de fundo
		setTitle("Escolher Poltrona");
		setBounds(200, 150, 750,400);
		
		JPanel botoes = new JPanel();
		botoes.setLayout(new GridLayout(1,0));
		
		JButton voltar = new JButton("Voltar");
		voltar.addActionListener(this);
		botoes.add(voltar);
		
		JButton comprar = new JButton("Comprar");
		comprar.addActionListener(this);
		botoes.add(comprar);
		
		JPanel rb = new JPanel();
		rb.setLayout(new GridLayout(3,27));
		rb.setOpaque(true);
		
		JRadioButton C05 = new JRadioButton("C05");
		C05.setMnemonic(KeyEvent.VK_B);
		C05.setActionCommand("C05");
		C05.setSelected(true);
		C05.addActionListener(this);
		C05.setOpaque(true);
		rb.add(C05);
		
		JPanel img = new JPanel();
		img.setLayout(new GridLayout(1,0));
		img.setOpaque(true);
		img.add(new Fundo());
		
		tela.add(botoes,BorderLayout.SOUTH);
		tela.add(img,BorderLayout.CENTER);
		//tela.add(C05, BorderLayout.CENTER);
		getContentPane().add(tela);
	}
	public void actionPerformed(ActionEvent e)
	{
		if(e.getSource() == comprar)
		{
			//if() fazer para quando a classe DAO der OK na tranferencia voltar para o menu passagem
			JOptionPane.showMessageDialog(null, "Tranzação Aceita!");
			MenuPassagem mp = new MenuPassagem();
			dispose();
		}
		
		if(e.getSource() == voltar)
		{
			ComprarPassagem c = new ComprarPassagem();
			dispose();
		}
		
	}	
	
		public static void main (String []args)
		{
			Poltronas p = new Poltronas();
		}
}
