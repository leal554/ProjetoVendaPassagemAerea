	public void actionPerformed(ActionEvent e) 
	{
		if(e.getSource() == comprar)
		{
			//if() fazer para quando a classe DAO der OK na tranferencia voltar para o menu passagem
			JOptionPane.showMessageDialog(null, bn.getString("acento.JOptionPane"));
			MenuPassagem mp = new MenuPassagem();
			dispose();
			
		}
		
		if(e.getSource() == voltar)
		{
			ComprarPassagem cp = new ComprarPassagem();
			dispose();
		}	
	}
