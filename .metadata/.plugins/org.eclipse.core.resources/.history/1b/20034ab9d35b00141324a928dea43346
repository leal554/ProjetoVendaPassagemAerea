package com.vpa.view;
import java.awt.*;
import java.awt.event.*;
import javax.swing.*;

import java.util.Locale;
import java.util.ResourceBundle;
public class Radio extends JFrame implements ActionListener
{
	public Radio()
	{
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setVisible(true);
		
		setTitle("Check-in");
		setBounds(300,50,350,350);
		getContentPane().setLayout(new GridLayout(1,0));
	
		JRadioButton acento = new JRadioButton("acento");
		acento.setMnemonic(KeyEvent.VK_B);
		acento.setActionCommand("acento");
		acento.setSelected(true);
		acento.addActionListener(this);
    
    
    	getContentPane().add(acento);
	}
	public void actionPerformed(ActionEvent e)
	{
		
	}
}
