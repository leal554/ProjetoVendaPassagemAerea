import java.awt.*;
import java.awt.event.*;

import javax.swing.*;

import com.vpa.controle.Cliente;

import java.util.Locale;
import java.util.ResourceBundle;

public class TransferenciaPassagem extends JFrame implements ActionListener
{
   JButton Transferir, voltar;
   JLabel info, label0, idBeneficiario, idPassagem;
   JTextField texto1,texto2;
   private ResourceBundle bn = ResourceBundle.getBundle("messages", Locale.getDefault());
   
	public TransferenciaPassagem()
	{		
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setVisible(true);
       
		setTitle("Transferencia de Passagem");
		setBounds(300,50,500,350);
		
      Container tela = getContentPane();
      tela.setLayout(new GridLayout(0,2));
      
      info = new JLabel("Digite os Dados do Beneficiario");
      
      label0 = new JLabel("");
      
      idBeneficiario = new JLabel("Digite Id Do Beneficiario");
      texto1 = new JTextField();
      
      idPassagem = new JLabel("Digite o Id da Passagem a ser Transferida");
      texto2 = new JTextField();
     
      Transferir = new JButton("transferir");
      Transferir.addActionListener(this);
      
      voltar = new JButton("voltar");
      voltar.addActionListener(this);
      
      tela.add(info);
      tela.add(label0);
      tela.add(idBeneficiario);
      tela.add(texto1);
      tela.add(idPassagem);
      tela.add(texto2);
      tela.add(Transferir);
      tela.add(voltar);
      
		//Internacionalizar
	}
	
	public void actionPerformed(ActionEvent e)
	{
		String email = texto1.getText();
		String senha = texto2.getText();
		
		boolean clienteLogin = false;
		
		Cliente c = new Cliente();
		clienteLogin = c.loginCliente(email, senha);
		
		if(e.getSource() == Transferir)
		{
			if(clienteLogin)
			{
				
				new TransferenciaPassagem();
				dispose(); 
			}
			
			dispose();
		}
		
		if(e.getSource() == voltar)
		{
			new LoginTransferencia();
			dispose();
		}
	}
	
	public static void main(String [] args)
	{
		TransferenciaPassagem t = new TransferenciaPassagem();
	}
}